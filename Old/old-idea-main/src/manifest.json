{
  "manifest_version": 3,
  "name": "XCalibr",
  "version": "1.0.2",
  "description": "A unified hub for developer tools - your one-stop solution for front-end, back-end, and utility tools.",

  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "XCalibr Hub"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "toggle-metadata-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period",
        "mac": "Command+Shift+Period"
      },
      "description": "Toggle Element Metadata Overlay"
    },
    "toggle-inspector": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Toggle Element Inspector"
    }
  }
}
